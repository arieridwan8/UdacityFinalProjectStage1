<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/pb_loading_indicator"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerInParent="true"
        tools:visibility="gone" />

    <TextView
        android:id="@+id/tv_loading_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pb_loading_indicator"
        android:layout_centerInParent="true"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="48dp"
        android:layout_marginTop="36dp"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:text="@string/error_text" />

    <Button
        android:id="@+id/bt_try_again"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/tv_loading_indicator"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_shape_red"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="@string/try_again"
        android:textColor="@color/colorWhite"
        android:textSize="14sp" />

</RelativeLayout>